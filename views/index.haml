.container
  .row
    .col-md-9
      - articles.each do |article|
        %article.post
          %header.post-header
            %h2.post-title
              %a{href: article[:link]}
                = article[:title]
            %span.post-meta
              %time{datetime: article[:datetime]}= article[:date]
              on #{article[:category]}
          %section.post-excerpt= article[:excerpt]
      #site-pages
        Page #{page} of #{pages}
        - if page > 1
          %a.newer-posts{href: "/page/#{page - 1}"} Newer Posts â†’
        - if pages > page
          %a.older-posts{href: "/page/#{page + 1}"} Older Posts â†’
    .col-md-3.side
      %p Links
      .links
        - meta[:links].each do |link|
          .link
            %a.links{href: link["link"]}
              %img{src: link["img"], width: "16px"}
              = link["name"]
            %br/
